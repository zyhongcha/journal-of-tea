{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Articles",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "excerpt": {
      "type": "richtext"
    },
    "published": {
      "type": "date"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "content": {
      "type": "richtext"
    },
    "tags": {
      "type": "enumeration",
      "enum": [
        "news",
        "stories",
        "teascience",
        "teaware",
        "health",
        "teatypes"
      ]
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "articles"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "article_status": {
      "type": "enumeration",
      "enum": [
        "live",
        "draft"
      ]
    }
  }
}
